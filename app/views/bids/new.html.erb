<div class="mb-6 px-5 py-4 rounded-lg bg-neutral-50 flex justify-between items-center">
  <p>
    Signed in as

    <strong>
      <%= current_company %>
    </strong>
  </p>

  <%= link_to "Sign out", new_session_path, class: "font-medium text-red-600 hover:text-red-700" %>
</div>

<h1 class="h1 mb-6">New bid</h1>

<h2 class="h2 mb-4">Route</h2>

<div class="mb-6 grid grid-cols-2 gap-3">
  <label class="col-span-2 md:col-span-1 p-3 border-2 rounded-lg cursor-pointer font-medium
    has-[:checked]:border-primary has-[:checked]:bg-green-50 has-[:checked]:text-green-900">
    <input type="radio" name="route" value="berlin-warsaw" class="hidden">
    Berlin
    <span class="text-neutral-500 mx-1">→</span>
    Warsaw
  </label>
  <label class="col-span-2 md:col-span-1 p-3 border-2 rounded-lg cursor-pointer font-medium
    has-[:checked]:border-primary has-[:checked]:bg-green-50 has-[:checked]:text-green-900">
    <input type="radio" name="route" value="berlin-warsaw" class="hidden">
    Belfast
    <span class="text-neutral-500 mx-1">→</span>
    Cardiff
  </label>
  <label class="col-span-2 md:col-span-1 p-3 border-2 rounded-lg cursor-pointer font-medium
    has-[:checked]:border-primary has-[:checked]:bg-green-50 has-[:checked]:text-green-900">
    <input type="radio" name="route" value="berlin-warsaw" class="hidden">
    Prague
    <span class="text-neutral-500 mx-1">→</span>
    Brussels
  </label>
  <label class="col-span-2 md:col-span-1 p-3 border-2 rounded-lg cursor-pointer font-medium
    has-[:checked]:border-primary has-[:checked]:bg-green-50 has-[:checked]:text-green-900">
    <input type="radio" name="route" value="berlin-warsaw" class="hidden">
    Amsterdam
    <span class="text-neutral-500 mx-1">→</span>
    Cologne
  </label>
</div>

<h2 class="h2 mb-4">Load</h2>

<div class="mb-6 grid grid-cols-3 gap-3">
  <label class="p-3 border-2 rounded-lg cursor-pointer font-medium
    has-[:checked]:border-primary has-[:checked]:bg-green-50 has-[:checked]:text-green-900">
    <input type="radio" name="load" value="berlin-warsaw" class="hidden">
      5 pallets
  </label>
  <label class="p-3 border-2 rounded-lg cursor-pointer font-medium
    has-[:checked]:border-primary has-[:checked]:bg-green-50 has-[:checked]:text-green-900">
    <input type="radio" name="load" value="berlin-warsaw" class="hidden">
      10 pallets
  </label>
  <label class="p-3 border-2 rounded-lg cursor-pointer font-medium
    has-[:checked]:border-primary has-[:checked]:bg-green-50 has-[:checked]:text-green-900">
    <input type="radio" name="load" value="berlin-warsaw" class="hidden">
      26 pallets
  </label>
</div>

<div class="mb-4 flex items-center">
  <h2 class="h2 mr-3">Bid</h2>
  <div class="badge badge-lg badge-outline badge-neutral border-neutral-300 text-sm font-medium">
    Max price: $1,000
  </div>
</div>

<div class="mb-6 space-y-4">
  <div class="flex justify-between items-center text-lg">
    <p>Lowest bid</p>
    <div>
      <p class="text-xl font-semibold tabular-nums">$1,000</p>
    </div>
  </div>

  <div class="flex justify-between items-center text-lg">
    <div class="flex items-center gap-x-3">
      <p>Your bid</p>

      <div class="badge badge-lg badge-primary text-sm font-medium">
        <svg class="size-4 mr-1" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check"><polyline points="20 6 9 17 4 12"></polyline></svg>
        Lowest
      </div>
    </div>

    <p class="text-xl font-semibold tabular-nums">
      <input type="number" id="price" name="price" placeholder="0" class="text-right text-xl input input-bordered w-28">
    </p>
  </div>
</div>

<button class="btn btn-primary btn-lg w-full">Submit bid</button>
