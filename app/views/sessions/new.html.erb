<h1 class="h1 mb-6">New bid</h1>

<%= form_with url: sessions_path do |f| %>
  <div class="mb-6 space-y-2">
    <%= f.label :company_name, class: "form-label form-label-lg" %>
    <%= f.text_field :company_name, value: current_company, autofocus: true, required: true, placeholder: "Acme Corporation",
      class: "input input-bordered input-lg w-full" %>
  </div>

  <button class="btn btn-primary btn-lg w-full">Submit</button>
<% end %>
